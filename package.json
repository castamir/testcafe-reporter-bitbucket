{
  "name": "testcafe-reporter-bitbucket",
  "version": "0.1.0",
  "description": "Testcafe reporter for Bitbucket",
  "author": "Capital Markets Gateway, Inc.",
  "license": "UNLICENSED",
  "main": "./dist/lib/index.js",
  "types": "./dist/lib/index.d.ts",
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!**/types/**",
      "!**/*.spec.{ts,tsx}",
      "!**/*.spec.{tsx}.snap"
    ],
    "coverageReporters": [
      "lcov"
    ]
  },
  "scripts": {
    "watch": "yarn clean && yarn ts:declaration --watch & yarn transpile --watch --verbose",
    "build": "yarn clean && yarn ts:declaration && yarn transpile",
    "clean": "rimraf coverage dist",
    "transpile": "BABEL_ENV=production babel src -d --out-dir dist/lib --source-maps inline --extensions '.js,.jsx,.ts,.tsx'",
    "ts:declaration": "tsc --project tsconfig.build.json",
    "ts:check": "tsc",
    "lint": "eslint --ext ts,tsx,js src",
    "test": "jest --coverage --watchAll=false --verbose false src",
    "format": "prettier src/**/*.ts --write"
  },
  "dependencies": {
    "indent-string": "~4.0.0",
    "lodash": "~4.17.15",
    "normalize-newline": "^3.0.0"
  },
  "devDependencies": {
    "@types/jest": "~24.9.0",
    "@types/lodash": "~4.14.144",
    "@typescript-eslint/eslint-plugin": "^2.17.0",
    "@typescript-eslint/parser": "^2.17.0",
    "callsite-record": "^3.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "testcafe": "0.9.0",
    "typescript": "^3.7.5"
  }
}
